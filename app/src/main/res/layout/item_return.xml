                <LinearLayout
                        android:id="@+id/btn_number_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/bc_counter"
                        >

                    <com.andexert.library.RippleView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            ripple:rv_type="rectangle"
                            ripple:rv_zoom="true"
                            app:rv_zoomDuration="70"
                            app:rv_zoomScale="1.03"
                            app:rv_rippleDuration="100"
                            app:rv_color="@color/rippelColor"
                            >

                        <RelativeLayout
                                android:id="@+id/decrement"
                                android:layout_width="match_parent"
                                android:paddingTop="6dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:paddingBottom="6dp"
                                android:background="@drawable/bc_arrow_down"
                                android:layout_height="wrap_content"
                                >

                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_down"
                                    android:layout_gravity="center"
                                    />
                        </RelativeLayout>
                    </com.andexert.library.RippleView>

                    <EditText
                            android:id="@+id/return_quantity"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:inputType="number"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:textColor="#4C47DD"
                            android:fontFamily="@font/sans_semibold"
                            />

                    <com.andexert.library.RippleView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            ripple:rv_type="rectangle"
                            ripple:rv_zoom="true"
                            app:rv_zoomDuration="40"
                            app:rv_zoomScale="1.05"
                            app:rv_rippleDuration="50"
                            app:rv_color="@color/rippelColor"
                            >

                        <RelativeLayout
                                android:id="@+id/increment"
                                android:layout_width="match_parent"
                                android:background="@drawable/bc_arrow_up"
                                android:layout_height="wrap_content"
                                android:paddingTop="6dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:paddingBottom="6dp"
                                >

                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_up"
                                    android:layout_gravity="center"
                                    />
                        </RelativeLayout>
                    </com.andexert.library.RippleView>
