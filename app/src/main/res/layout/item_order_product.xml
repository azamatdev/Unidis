<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
        android:id="@+id/item_ripple_order"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ripple="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ripple:rv_type="rectangle"
        ripple:rv_zoom="true"
        app:rv_zoomDuration="100"
        app:rv_zoomScale="1.03"
        app:rv_rippleDuration="200"
        app:rv_color="@color/rippleEffectColor"
        >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
            >

        <LinearLayout
                android:id="@+id/stick_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/client_add_toolbar"
                >

            <TextView
                    android:id="@+id/product_model_id"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textSize="16sp"
                    android:textColor="@color/textMainColor"
                    android:fontFamily="@font/roboto_medium"
                    />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    >

                <TextView
                        android:id="@+id/edtxt_product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/textMainColor"
                        android:fontFamily="@font/roboto_medium"
                        />


            </LinearLayout>

            <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Narxi"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/textMainColor"
                    android:fontFamily="@font/roboto_medium"
                    />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/textLightColor"
                app:layout_constraintBottom_toBottomOf="parent"
                />


    </android.support.constraint.ConstraintLayout>
</com.andexert.library.RippleView>
