<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                            tools:context=".input.CheckFragment"
        >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
            >


        <android.support.v7.widget.CardView
                android:id="@+id/card_add_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/add_product"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:text="Brend nomi"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/textMainColor"
                            android:textSize="12sp"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:background="@drawable/bc_edtxt"
                        >

                    <EditText
                            android:id="@+id/add_brand_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/add_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:background="@drawable/bg_button"
                        >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BREND QO'SHISH"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="16sp"
                            />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:id="@+id/add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:text="Brend nomi"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/textMainColor"
                            android:textSize="12sp"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:background="@drawable/bc_edtxt"
                        >

                    <Spinner
                            android:id="@+id/spinner_brands"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/brand_name"
                            />
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="4dp"
                            android:text="Model ID"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/textMainColor"
                            android:textSize="12sp"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:background="@drawable/bc_edtxt"
                        >

                    <EditText
                            android:id="@+id/add_model_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
                            android:background="@android:color/transparent"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/add_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:background="@drawable/bg_button"
                        >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MODEL QO'SHISH"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="16sp"
                            />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
